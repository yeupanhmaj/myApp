<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/chonburi"
        android:text="Setting up your schedule to practice"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textColor="#ac095b"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Name: "
                android:textSize="25dp" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toStartOf="@id/btnEditTen"
                android:layout_toEndOf="@id/textView2"
                android:enabled="false"
                android:hint="What Your Name?"
                android:singleLine="true"
                android:textColor="#ac095b"
                android:textSize="25dp">

            </EditText>

            <ImageButton
                android:id="@+id/btnEditTen"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_editsetting">

            </ImageButton>
        </RelativeLayout>

        <Button
            android:id="@+id/btnGetFavWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_background"
            android:text="Favorite Words" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="#ac095b"
            android:textSize="20dp" />

        <RelativeLayout
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"

            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Practice Time"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:text="How Many Time To Practice" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txtDay"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Practice Schedule"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line2"
                android:text="Day To Practice" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txtNotification"
            android:layout_width="wrap_content"
            android:layout_height="65dp"

            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:text="Time"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:singleLine="true"
                android:text="notification at:"
                android:textColor="#ac095b"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txtTimePractice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:text="time"
                android:textColor="#ff0000"
                android:textSize="25dp" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnClearRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_background"
            android:text="Reset Setting" />

    </RelativeLayout>

</LinearLayout>